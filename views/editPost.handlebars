    <form class="form edit-post-form" data-id="{{post.id}}">
      <div class="form-group">
        <label for="post-title">post title:</label>
        <input value="{{post.title}}" class="form-input" type="text" id="post-title" />
      </div>
      <div class="form-group">
        <label for="post-content">content:</label>
        <textarea class="form-input" id="post-content">{{post.content}}</textarea>
      </div>
      <div class="form-group">
        <button id="updateBtn" type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>

    <script src="/js/editpost.js"></script>